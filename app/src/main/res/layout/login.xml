<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffff"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                style="@style/ImageView2"
                android:layout_width="@dimen/imagewidth"
                android:layout_height="@dimen/imageheight"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"/>

            <TextView
                android:id="@+id/textView"
                style="@style/TextView"
                android:layout_width="@dimen/size_110"
                android:layout_height="@dimen/size_110" />


        </RelativeLayout>



        <EditText
            android:id="@+id/editText"
            style="@style/EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginTop="@dimen/size_20"
            />

        <EditText
            android:id="@+id/editText2"
            style="@style/EditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_marginRight="@dimen/size_10"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView5"
                style="@style/ImageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20"/>

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/size_30"
                />

        </RelativeLayout>

        <TextView
            android:id="@+id/textViewreg3"
            style="@style/TextView3"
            android:text="New User? Register Now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/size_15"/>

        <TextView
            android:id="@+id/textView4"
            style="@style/TextView4"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_15">



            <ImageView
                android:id="@+id/imageView3"
                style="@style/ImageView3"
                android:layout_width="@dimen/imageviewwidthheight"
                android:layout_height="@dimen/imageviewwidthheight"
                android:layout_marginLeft="@dimen/size_130"
                android:layout_marginStart="@dimen/size_130"
                />

            <ImageView
                android:id="@+id/imageView4"
                style="@style/ImageView4"
                android:layout_width="@dimen/imageviewwidthheight"
                android:layout_height="@dimen/imageviewwidthheight"
                android:layout_marginLeft="@dimen/size_5"
                android:layout_marginStart="@dimen/size_5"/>


        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView6"
        style="@style/ImageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView2"
        style="@style/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>
